<p id="notice"><%= notice %></p>
<div class="panel panel-default">
    <div class="panel-heading">
        <b> <%= @restaurant.name %> Menu</b>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Left Number</th>
                        <th>Sold Number</th>
                        <th>Description</th>
                        <th>Image</th>
                       <!-- <th>Option</th>-->
                    </tr>
                </thead>
                <tbody>
                    <% @foods.each do |food| %>
                    <tr class="odd gradeX">
                        <td><%= food.name %></td>
                        <td class="center"><%= food.price %></td>
                        <td><%= food.num_left %></td>
                        <td><%= food.num_sold %></td>
                        <td><%= food.description %></td>
                        <td><%= food.image %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>