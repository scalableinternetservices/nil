<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>
<%= @restaurant.id %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>RestID</th>
      <th>Description</th>

    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.price %></td>
        <td><%= food.restaurant_id %></td>
        <td><%= food.description %></td>
        <td><%= link_to 'Edit', edit_restaurant_food_path(@restaurant, food) %></td>
        <td><%= link_to 'Destroy', restaurant_food_path(@restaurant, food), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

