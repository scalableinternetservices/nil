<br/>
<div class="panel panel-default">
  <div class="panel-heading">
    <b>Orders</b>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="dataTable_wrapper">
      <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
          <th>Id</th>
          <th>Restaurant</th>
          <th>Price</th>
          <th>Order Time</th>
          <th>Status</th>
          <th>Option</th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr class="odd gradeX">
              <td><%= order.id %></td>
              <td><%= order.restaurant.name %></td>
              <td><%= order.price %></td>
              <td><%= order.created_at %></td>
              <td><%= "Confirmed at #{order.confirmed_at}"%></td>
              <td>
                <a class="btn btn-info" href="#">Take</a>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>